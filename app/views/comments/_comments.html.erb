<% post.comments.each do |comment| %>
	<div class="comment-list">
		<div class="comment-user">
			<%= link_to user_path(comment.user) do %>
				<span class="icon-image">
					<%= attachment_image_tag comment.user, :icon_image, :fill, 40, 40, fallback: "default-user-image.png", size: "40x40" %>
				</span>
				<strong><%= comment.user.name %></strong>
			<% end %>
			<p class="data">
				<%= time_ago_in_words(comment.created_at) %>
			</p>
			<%= link_to  post_comment_path(post, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} do %>
				<i class="fas fa-times"></i>
			<% end %>
		</div>
		<div class="comment">
			<%= comment.comment %>
		</div>
	</div>
<% end %>