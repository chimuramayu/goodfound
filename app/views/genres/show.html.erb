<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<%= render 'layouts/sidebar', genres: @genres %>
			</div>

			<div class="results col-lg-9">
				<h4 class="headline">検索結果</h4>
				<p class="item-name">"<strong><%= @genre.name %></strong>"</p>
				<% if @posts.empty? %>
					<div class="post-none">該当する投稿がありませんでした</div>
				<% else %>
					<div class="post-index" id="genre-search-index">
						<%= render 'posts/post_index', posts: @posts %>
					</div>
					<!-- もっと見る -->
					<%= link_to_next_page @posts, 'more', id: "more-genre-search", class: "more-btn", remote: true %>
				<% end %>
			</div>
		</div>
	</div>
</div>