<table class="table">
	<% users.each do |user| %>
		<tbody>
			<tr>
				<td><%= link_to user_path(user) do %>
					<%= attachment_image_tag user, :icon_image, :fill, 50, 50, fallback: "default-user-image.png", size: "50x50", class: "icon-image" %>
					<% end %></td>
				<td class="name"><strong><%= user.name %></strong>　<span class="username">@<%= user.username %></span></td>
				<td><%= user.followings.count %> <span>フォロー</span></td>
				<td><%= user.followers.count %> <span>フォロワー</span></td>
				<td>
	  			<span id="follow-button-<%= user.id %>"><%= render 'relationships/follow', user: user %></span>
			  </td>
			</tr>
		</tbody>
	<% end %>
</table>