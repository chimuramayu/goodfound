<div class="main">
	<div class="container user-edit">
		<%= form_for(@user) do |f| %>
			<!-- エラーメッセージ -->
			<%= render 'layouts/error_message', post: @user %>
			<div class="row justify-content-center">
				<div class="col-lg-4 col-sm-7 col-10">
					<!-- 編集フォーム -->
					<div class="icon">
						<%= attachment_image_tag @user, :icon_image, size: "230x230", fallback: "default-user-image.png", class: "icon-image", id: "img", onClick: "$('#file').click()" %>
						<%= f.attachment_field :icon_image, id: "file" %>
					</div>
					<% if @user.icon_image.present? %>
						<input type="submit" name="delete_image" value="画像を削除" class="delete-image-btn">
					<% end %>

					<div class="input-form">
						<%= f.text_field :username, placeholder: "Goodfound ID", class: "form-control" %>
					</div>

					<div class="input-form">
						<%= f.text_field :name, placeholder: "ニックネーム", class: "form-control" %>
					</div>

					<div class="input-form">
						<%= f.text_area :profile, rows: 8, placeholder: "プロフィール", class: "form-control" %>
					</div>

					<div class="actions">
						<%= f.submit "更新", class: "btn btn-dark" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>