<div class="main">
	<div class="profile clearfix">
		<div class="p-icon-image">
			<%= attachment_image_tag @user, :icon_image, :fill, 100, 100 %>
		</div>
		<div class="p-profile">
			<p class="p-username">@<%= @user.username %></p>
			<p class="p-name"><strong><%= @user.name %></strong></p>
			<%= @user.profile %>
		</div>
		<div class="actions">
			<% if current_user != @user %>
        <% if @user.followed_by?(current_user) %>
            <p><%=link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %></p>
        <% else %>
            <p><%=link_to "フォロー", user_relationships_path(@user.id), method: :post, class: "btn btn-default" %></p>
        <% end %>
    	<% else %>
				<%= link_to "プロフィールを編集", edit_user_path(current_user), class: "btn btn-outline-warning" %>
			<% end %>
		</div>
	</div>
	<div class="user-nav">
		<span><%= link_to @favorites.count, favorites_user_path(@user) %>おきにいり</span>
		<span><%= link_to @following.count, following_user_path(@user) %>follow</span>
		<span><%= link_to @followers.count, followers_user_path(@user) %>follower</span>
	</div>
	<div class="user-posts clearfix">
		<% @posts.each do |post| %>
			<div class="user-post clearfix">
				<div class="user-post-image">
					<%= attachment_image_tag post, :post_image, :fill, 200, 200 %>
				</div>
				<div class="user-post-content">
					<% if post.song != nil %>
						<p><i class="fas fa-music"></i>
						<strong><%= post.song %></strong></p>
					<% end %>
					<% if post.album != nil %>
						<p><i class="fas fa-compact-disc"></i>
						<strong><%= post.album %></strong></p>
					<% end %>
					<p><i class="fas fa-user-circle"></i>
					<strong><%= post.artist %></strong></p>
				</div>
			</div>
		<% end %>
	</div>
</div>