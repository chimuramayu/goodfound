<div class="sidebar">
	<div class="sidebar-keyword">
		<p class="headline"><strong>キーワード検索</strong></p>
		<%= form_tag(search_path, method: :get) do %>
			<div class="search-bar">
				<%= text_field_tag :search, "", placeholder: "キーワードを入力", class: "form-control" %>
			</div>
			<p class="text">カテゴリーを選択</p>
			<%= render 'layouts/radio_tile' %>
			<div class="actions">
				<%= submit_tag '見つける', class: "btn" %>
			</div>
		<% end %>
	</div>

	<div class="sidebar-genre">
		<p class="headline"><strong>ジャンル検索</strong></p>
		<% genres.each do |genre| %>
			<div class="genre-item">
				<%= link_to genre.name, genre_path(genre), class: "" %>
			</div>
		<% end %>
	</div>
</div>