<div class="container">
		<%= form_for(@post) do |f| %>
		<div class="row">
			<div class="col-5 offset-1">
				<%= f.label :song, "画像" %>
				<%= f.attachment_field :post_image %>
			</div>
			<div class="col-5">
				<div class="form-group">
					<%= f.label :song, "曲" %>
					<%= f.text_field :song, class:"form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :album, "アルバム" %>
					<%= f.text_field :album, class:"form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :artist, "アーティスト" %>
					<%= f.text_field :artist, class:"form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :genre_id, "ジャンル" %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください", class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :bode, "お気に入りポイント" %>
					<%= f.text_area :body, class:"form-control" %>
				</div>
			</div>
		</div>
				<%= f.submit '更新する' %>
		<% end %>
</div>