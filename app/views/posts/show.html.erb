<div class="container">
	<div class="post-show">
		<div class="post col-8 offset-2">
			<div class="post-user">
				<%= link_to user_path(@post) do %>
				<%= attachment_image_tag @post.user, :icon_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %>
				<% end %>
				<%= @post.user.username %>
				<%= @post.user.name %>
			</div>
			<div class="row post-content">
				<div class="col-6">
					<%= attachment_image_tag @post, :post_image, :fill, 250, 250  %>
				</div>
				<div class="col-6">
					<% if @post.song != nil %>
						<p><i class="fas fa-music"></i>
						<strong>　<%= @post.song %></strong></p>
					<% end %>
					<% if @post.album != nil %>
						<p><i class="fas fa-compact-disc"></i>
						<strong>　<%= @post.album %></strong></p>
					<% end %>
					<p><i class="fas fa-user-circle"></i>
						<strong>　<%= @post.artist %></p></strong>
					<p><i class="fas fa-pen-square"></i>
						　<%= @post.body %></p>
				</div>
			</div>
			<div class="reactions">
				<span id="favorite-button-<%= @post.id %>">
					<%= render 'favorites/favorite', post: @post %>
				</span>
				<i class="far fa-comment"></i>
				<span><%= @post.comments.count %>コメント</span>
			<div class="row comment-box">
				<div id="comments-<%= @post.id %>">
					<%= render 'comments/comments', post: @post %>
				</div>
				<%= form_with(model: [@post, @comment]) do |f| %>
					<%= f.text_area :comment %>
					<%= f.submit "送信" %>
				<% end %>
			</div>
	</div>
</div>