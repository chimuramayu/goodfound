<div class="main">
	<div class="container">
		<div class="post-box col-8 offset-2">
			<%= render 'posts/post_user', post: @post %>

			<div class="post-content">
				<div class="post-image">
					<%= attachment_image_tag @post, :post_image, :fill, 350, 250  %>
				</div>
				<div class="post-detail">
					<% if @post.song != nil %>
						<p><i class="fas fa-music"></i>
						<strong><%= @post.song %></strong></p>
					<% end %>
					<% if @post.album != nil %>
						<p><i class="fas fa-compact-disc"></i>
						<strong><%= @post.album %></strong></p>
					<% end %>
					<p><i class="fas fa-user-circle"></i>
					<strong><%= @post.artist %></strong></p>
					<% if @post.genre.name != nil %>
						<p><i class="fas fa-th"></i>
						<strong><%= @post.genre.name %></strong></p>
					<% end %>
					<p><span><%= @post.body %></span></p>
				</div>
			</div>

			<div class="reactions">
				<span id="favorite-button-<%= @post.id %>">
					<%= render 'favorites/favorite', post: @post %>
				</span>
				<%= link_to post_path(@post) do %>
					<i class="far fa-comment" id="comment-box"></i>
				<% end %>
				<span id="comment_count"><%= @post.comments.count %></span>
			</div>

			<div class="comment-box">
				<div id="comments-<%= @post.id %>">
					<%= render 'comments/comments', post: @post %>
				</div>
				<%= form_with(model: [@post, @comment]) do |f| %>
					<%= f.text_area :comment, class: "form-control", placeholder: "コメント" %>
					<%= f.submit "送信", class: "btn" %>
					<% end %>
			</div>
		</div>
	</div>
</div>