<%= form_for(post) do |f| %>
	<!-- エラーメッセージ -->
	<div class="col-4 offset-1">
		<%= render 'layouts/error_message', post: post %>
	</div>
	<div class="row">
		<!-- 投稿フォーム -->
		<div class="col-5 offset-1">
			<div id="img-feild" onClick="$('#file').click()">
				<% if @post_image.present? %>
					<%= attachment_image_tag post, :post_image, :fill, 350, 250, id: "img" %>
				<% else %>
					<img id="img">
						<i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
        <% end %>
      </div>
			<%= f.attachment_field :post_image, id: "file" %>
		</div>
		<div class="col-5">
			<div class="form-group">
				<%= f.text_field :song, placeholder: "曲", class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_field :album, placeholder: "アルバム",  class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_field :artist, placeholder: "アーティスト",  class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.collection_select :genre_id, Genre.all, :id, :name, {:include_blank => "ジャンルを選択してください"}, {class: "form-control"} %>
			</div>
			<div class="form-group">
				<%= f.text_area :body, placeholder: "おきにいりポイント",  class:"form-control", rows: 7 %>
			</div>
		</div>
	</div>
	<div class="actions">
		<%= f.submit class: "btn btn-dark" %>
	</div>
<% end %>