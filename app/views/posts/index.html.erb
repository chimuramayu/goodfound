<div class="container body">
	<% @posts.each do |post| %>
		<div class="post col-8 offset-2">
			<div class="post-user">
				<%= link_to user_path(post) do %>
				<%= attachment_image_tag post.user, :icon_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %>
				<% end %>
				<%= post.user.username %>
				<%= post.user.name %>
			</div>
			<%= link_to post_path(post) do %>
			<div class="row post-content">
				<div class="col-6">
					<%= attachment_image_tag post, :post_image, :fill, 250, 250  %>
				</div>
				<div class="col-6">
					<p><%= post.song %></p>
					<p><%= post.album %></p>
					<p><%= post.artist %></p>
				</div>
			</div>
			<% end %>
			<div class="favorites">
				<% if post.favorited_by?(current_user) %>
					<%= link_to post_favorites_path(post), method: :delete do %>
						<i class="fas fa-star"></i>
					<% end %>
					<span><%= post.favorites.count %>おきにいり</span>
				<% else %>
					<%= link_to post_favorites_path(post), method: :post do %>
						<i class="far fa-star"></i>
					<% end %>
					<span><%= post.favorites.count %>おきにいり</span>
				<% end %>
				<i class="far fa-comment"></i>
				<span><%= post.comments.count %>コメント</span>
				<span><%= link_to '編集', edit_post_path(post) %>
				</span>
				<span><%= link_to '削除', post_path(post), method: :delete %></span>
			</div>
		</div>
	<% end %>
</div>