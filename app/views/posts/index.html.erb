<div class="main timeline">
	<% @posts.each do |post| %>
		<div class="tl-post">
			<div class="tl-post-user">
				<%= link_to user_path(post) do %>
					<%= attachment_image_tag post.user, :icon_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %>
				<% end %>
				<strong><%= post.user.name %></strong>
				@<%= post.user.username %>
			</div>
			<div class="tl-post-content clearfix">
				<div class="tl-post-image">
					<%= link_to post_path(post) do %>
						<%= attachment_image_tag post, :post_image, :fill, 250, 250  %>
					<% end %>
				</div>
				<div class="tl-post-detail">
					<% if post.song != nil %>
						<p><i class="fas fa-music"></i>
						<strong><%= post.song %></strong></p>
					<% end %>
					<% if post.album != nil %>
						<p><i class="fas fa-compact-disc"></i>
						<strong><%= post.album %></strong></p>
					<% end %>
					<p><i class="fas fa-user-circle"></i>
					<strong><%= post.artist %></strong></p>
					<p><span><%= post.body %></span></p>
				</div>
			</div>
			<div class="reactions">
				<div id="favorite-button-<%= post.id %>">
					<%= render 'favorites/favorite', post: post %>
				</div>
				<%= link_to post_path(post) do %>
					<i class="far fa-comment"></i>
				<% end %>
				<span><%= post.comments.count %>コメント</span>
			</div>
			<div class="actions">
				<span><%= link_to '編集', edit_post_path(post) %>
				</span>
				<span><%= link_to '削除', post_path(post), method: :delete %></span>
			</div>
		</div>
	<% end %>
</div>