<div class="container">
	<% @posts.each do |post| %>
		<div class="post col-6 offset-3">
			<div class="post-user">
				<%= link_to user_path(post) do %>
				<%= attachment_image_tag post.user, :icon_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %>
				<% end %>
				<%= post.user.username %>
				<%= post.user.name %>
			</div>
			<%= link_to post_path(post) do %>
			<div class="row post-content">
				<div class="col-5">
					<%= attachment_image_tag post, :post_image, :fill, 100, 100, fallback: ""  %>
				</div>
				<div class="col-7">
					<p><%= post.song %></p>
					<p><%= post.album %></p>
					<p><%= post.artist %></p>
				</div>
			</div>
			<% end %>
			<div class="favorites">
				<span>おきにいり</span>
				<span>コメント</span>
			</div>
		</div>
	<% end %>
</div>