<div class="devise-container">
  <div class="input-box">
    <h3><i class="fas fa-sign-in-alt"></i>
      <strong>Log in</strong></h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :username, autofocus: true, autocomplete: "Goodfound ID", placeholder: "Goodfound ID", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "次回から入力を省略する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn-original" %>
      </div>
    <% end %>

    <span><%= render "devise/shared/links" %></span>
  </div>
</div>