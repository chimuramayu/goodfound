<% if resource.errors.any? %>
  <div class="error-message">
    <p>
      <i class="fas fa-exclamation-circle"></i>
      <%= resource.errors.count %>箇所のエラーがあります
    </p>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
